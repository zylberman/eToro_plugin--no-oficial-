{
  "manifest_version": 3,
  "name": "eToro ATR Assistant",
  "version": "1.0",
  "description": "Calcula el ATR(14) en tiempo real usando datos de Yahoo Finance.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://*.etoro.com/*",
    "https://api.allorigins.win/*",
    "https://query1.finance.yahoo.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.etoro.com/*"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ]
}